@using Peacock.ViewModel.Manage
@model List<ExampleProductItem>

<section class="content">
    <h1>应用关联商品</h1>

    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <button class="btn btn-info j-btn-add">添加</button>
                        <a href="@Url.Action("Index", "Example", new { area = "Product" })" class="btn btn-default">返回</a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row">
                                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 800px;">图片</th>
                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 175px;">商品名称</th>
                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 175px;">操作</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr role="row" class="odd">
                                                    <td class="sorting_1"><img src="@item.ProductImgPath" style="width:200px;height:200px;" /></td>
                                                    <td>@item.ProductName</td>
                                                    <td>
                                                        <button class="btn btn-success" onclick="editRecord(@item.Id)">编辑</button>
                                                        <button class="btn btn-default" onclick="deleteRecord(@item.Id)">删除</button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        @*<tfoot>
                                                <tr><th rowspan="1" colspan="1">Rendering engine</th><th rowspan="1" colspan="1">Browser</th><th rowspan="1" colspan="1">Platform(s)</th><th rowspan="1" colspan="1">Engine version</th><th rowspan="1" colspan="1">CSS grade</th></tr>
                                            </tfoot>*@
                                    </table>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->



        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->


    @Html.Partial("_Modal")

    @Html.Partial("_Confirm")

</section>


@section Scripts {
    <script type="text/javascript">
        $(function () {
            let $modal = $('#customModal');

            $('.j-btn-add').on('click', function () {
                $modal.modal('show');
                //$('#customModal').modal('hide');
                $modal.find('#modalLabel').text('新增');
                //$modal.find('#modal-body');
                $.ajax({
                    url: '/Product/Example/ProductExampleRelationEdit?id=0&exampleId=' + @ViewData["ExampleId"],
                    method: 'GET',
                    dataType: 'HTML',
                    success: function (r) {
                        $modal.find('.modal-body').html(r);
                    }
                });
            });

            $modal.find('.j-btn-save').on('click', function () {
                debugger;
                let postData = {
                    Id : $modal.find('#Id').val(),
                    ExampleId: $modal.find('#ExampleId').val(),
                    ProductId: $modal.find('#ProductId').val()
                };

                $.ajax({
                    url: '/Product/Example/SaveExampleProduct',
                    method: 'POST',
                    data: postData,
                    success: function (r) {
                        if (r.Success) {
                            $modal.modal('hide');
                            alert('保存成功');
                            window.location.reload();
                        } else {
                            console.log(r);
                        }
                    }
                });

            });
        });

        function editRecord(id) {
            let $modal = $('#customModal');
            $modal.modal('show');
                //$('#customModal').modal('hide');
            $modal.find('#modalLabel').text('编辑');
                //$modal.find('#modal-body');
                $.ajax({
                    url: '/Product/Example/ProductExampleRelationEdit?id='+ id,
                    method: 'GET',
                    dataType: 'HTML',
                    success: function (r) {
                        $modal.find('.modal-body').html(r);
                    }
                });
        }

        function deleteRecord(id) {
            peacockConfirm('确定要删除该条记录吗？', function () {

                $.ajax({
                    url: '/Product/Example/DeleteExampleProductById',
                    data: { id: id },
                    method: 'POST',
                    dataType: 'JSON',
                    beforeSend: function () {

                    },
                    success: function (r) {
                        if (r.Success) {
                            window.location.reload();
                        } else {
                            alert("删除失败, " + r.Message);
                            console.log(r);
                        }
                    },
                    error: function (err) {
                        console.log(err);
                    },
                    complete: function () {

                    }
                });

            });
        }
    </script>
}