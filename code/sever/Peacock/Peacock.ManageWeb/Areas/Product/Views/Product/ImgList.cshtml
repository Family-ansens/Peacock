@using Peacock.ViewModel.Manage
@model List<ProductImgItem>

<section class="content">
    <h1>商品图片</h1>

    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <button class="btn btn-info j-btn-add">添加</button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row">
                                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 800px;">图片</th>
                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 175px;">排序</th>
                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 175px;">操作</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr role="row" class="odd">
                                                    <td class="sorting_1"><img src="@item.ImgUrl" /></td>
                                                    <td>@item.OrderId</td>
                                                    <td><button class="btn btn-default" onclick="deleteProductImg(@item.Id)">删除</button></td>
                                                </tr>
                                            }
                                        </tbody>
                                        @*<tfoot>
                                                <tr><th rowspan="1" colspan="1">Rendering engine</th><th rowspan="1" colspan="1">Browser</th><th rowspan="1" colspan="1">Platform(s)</th><th rowspan="1" colspan="1">Engine version</th><th rowspan="1" colspan="1">CSS grade</th></tr>
                                            </tfoot>*@
                                    </table>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->



        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->


    @Html.Partial("_Modal")

    @Html.Partial("_Confirm")

</section>


@section Scripts {
    <script type="text/javascript">
        $(function () {
            let $modal = $('#customModal');

            $('.j-btn-add').on('click', function () {
                $modal.modal('show');
                //$('#customModal').modal('hide');
                $modal.find('#modalLabel').text('上传图片');
                //$modal.find('#modal-body');
                $.ajax({
                    url: '/Base/GetUploadView',
                    method: 'GET',
                    dataType: 'HTML',
                    success: function (r) {
                        $modal.find('.modal-body').html(r);
                    }
                })
            });

            $modal.find('.j-btn-save').on('click', function () {

                $.ajax({
                    url: '/Product/Product/SaveImg',
                    method: 'POST',
                    data: { productId: productImg.productId, filePath: productImg.filePath },
                    success: function (r) {
                        if (r.Success) {
                            $modal.modal('hide');
                            alert('保存成功');
                            window.location.reload();
                        } else {
                            console.log(r);
                        }
                    }
                });

            });
        });

        let productImg = {};

        function uploadCallback(d) {
            alert('上传成功');
            productImg.productId = @ViewData["ProductId"];
            productImg.filePath = d;
        }

        function deleteProductImg(id) {
            peacockConfirm('确定要删除该条记录吗？', function () {

                $.ajax({
                    url: '/Product/Product/DeleteProductImg',
                    data: { id: id },
                    method: 'POST',
                    dataType: 'JSON',
                    beforeSend: function () {

                    },
                    success: function (r) {
                        if (r.Success) {
                            window.location.reload();
                        } else {
                            alert("删除失败, " + r.Message);
                            console.log(r);
                        }
                    },
                    error: function (err) {
                        console.log(err);
                    },
                    complete: function () {

                    }
                })

            });
        }
    </script>
}