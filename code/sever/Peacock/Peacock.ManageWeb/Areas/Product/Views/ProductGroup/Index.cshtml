@using Peacock.ViewModel.Manage
@using Peacock.Dal

@model PageResult<T_Pro_ProductGroup>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Data Table With Full Features</h3>
                </div>
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row">
                                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 141px;">编码</th>
                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 175px;">名称</th>
                                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 154px;">更新时间</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (var i = 0; i < Model.List.Count; i++)
                                            {
                                                <tr role="row" class="@(i % 2 == 0 ? "even" : "odd")">
                                                    <td class="sorting_1">@(Model.List[i].Code)</td>
                                                    <td>@(Model.List[i].Name)</td>
                                                    <td>@(Model.List[i].CreatedTime.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>

                                @if (Model.Pager.Total > 0)
                                {
                                    <div class="row">
                                        <nav aria-label="Page navigation example">
                                            <ul class="pagination">
                                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                                @for (var i = 0; i < Model.Pager.PageNumber; i++)
                                                {
                                                    <li class="page-item"><a class="page-link" href="#">@(i + 1)</a></li>
                                                }
                                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                            </ul>
                                        </nav>
                                    </div>
                                }

                            </div>
                        </div>


                    </div>
                </div>
            </div>




        </div>
    </div>


</section>
